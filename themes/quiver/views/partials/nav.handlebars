<md-button class="min-3 text-large" ng-click="toggleSidenav('left')" hide-gt-md tabindex="0" aria-label="Toggle left side nav" style="margin: 0 -.5rem 0 0;">
    <i class="mdi-action-subject"></i>
</md-button>
<div class="md-toolbar-tools">
    <div layout="row" flex class="fill-height">
        {{#if settings.logo }}
            <a class="logo relative block" href="/" style="{{ settings.logoStyle }}">
                <img src="{{ settings.logo }}">
            </a>
        {{ else }}
            <h2 class="headline text-primary0" style="letter-spacing: -1px; overflow: visible; font-weight: 900; font-size: 2rem;">
                <a class="undecorated" href="/">{{ settings.siteTitle }}</a>
            </h2>
        {{/if }}
        <span flex></span>
        <div class="md-toolbar-item" ng-show="$storage.cart.productCount">
            <md-button class="md-fab md-mini md-primary md-raised" href="/app/cart" aria-label="View cart">
                <span class="headline relative" ng-bind="$storage.cart.productCount" style="top: -1px; left: 1px;"></span>
                <i class="mdi-action-shopping-cart" style="position: relative; top: 1px;"></i>
            </md-button>
        </div>
        <div class="md-toolbar-item" ng-show="!currentUser" layout="row" layout-align="center center">
            <md-button class="margin-horizontal-small" href="/app/login" aria-label="Log in">
                <span hide-sm><i class="mdi-action-input"></i> &nbsp;</span>Login
            </md-button>
            <md-button href="/app/register" aria-label="Register" hide-sm>
                Register
            </md-button>
        </div>
        {{!--
        <div layout-align="right" class="md-toolbar-item" ng-show="currentUser">
            <button class="md-button" ng-click="toggleSidenav('right')">
                <i class="mdi-action-settings"></i>
            </button>
        </div> --}}
    </div>
</div>